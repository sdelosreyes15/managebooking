<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog title="About Application" class="sapUiSizeCompact" contentWidth="40%">
        <content> 
            <f:SimpleForm  editable="false" layout="ResponsiveGridLayout" labelSpanM="4">
            <f:content>
                <Label text="{i18n>version}" />
                <Text text="1.1.0" />
                <Label text="{i18n>ui5Version}" />
                <Text text="1.90.6" />
                <Label text="{i18n>jqueryVersion}" />
                <Text text="3.3.0" />
                <Label text="{i18n>author}" />
                <Text text="Seve Delos Reyes" />
                <Label text="Description" />
                <Text text="{i18n>description}" />
             </f:content>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button text="Close" press="onCloseDialog" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>